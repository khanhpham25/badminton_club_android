<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:clickable="true">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#6CC0EC">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <ImageView
                android:id="@+id/imageViewMemberAvatar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/textViewMemberName"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginStart="8dp"
                android:text="Name"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imageViewMemberAvatar"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="8dp" />

            <TextView
                android:id="@+id/textViewMemberMobile"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginStart="8dp"
                android:text="Mobile: "
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/imageViewMemberAvatar"
                app:layout_constraintTop_toBottomOf="@+id/textViewMemberName"
                android:layout_marginLeft="8dp" />

            <TextView
                android:id="@+id/textViewMemberLevel"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginStart="8dp"
                android:text="Level: "
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/imageViewMemberAvatar"
                app:layout_constraintTop_toBottomOf="@+id/textViewMemberMobile"
                android:layout_marginLeft="8dp" />

            <Button
                android:id="@+id/btnDeleteMember"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="44dp"
                android:layout_height="match_parent"
                android:backgroundTint="#ff6666"
                android:drawableLeft="@drawable/ic_cross"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>