<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:clickable="true">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#6CC0EC">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageViewUserAvatar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/textViewUserName"
                android:layout_height="22dp"
                android:layout_width="wrap_content"
                android:text="Name"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageViewUserAvatar"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btnAcceptRequest"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:backgroundTint="#d3d2d2"
                android:drawableLeft="@drawable/ic_active"
                android:text="  Accept"
                android:textColor="#565656"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/imageViewUserAvatar"
                app:layout_constraintTop_toBottomOf="@+id/textViewUserName" />

            <Button
                android:id="@+id/btnDenyRequest"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:backgroundTint="#d3d2d2"
                android:drawableLeft="@drawable/ic_deny"
                android:text="  Deny"
                android:textColor="#565656"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/btnAcceptRequest"
                app:layout_constraintTop_toBottomOf="@+id/textViewUserName" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>