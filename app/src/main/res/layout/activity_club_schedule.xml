<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asus.badminton_club.ClubScheduleActivity"
    android:background="#6CC0EC">

    <Button
        android:id="@+id/btnCreateDate"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:drawableLeft="@drawable/ic_add"
        android:backgroundTint="#e1e1e1"
        android:text="  New Date"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@id/cycler_view_club_schedules"
        app:layout_constraintTop_toTopOf="parent"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/cycler_view_club_schedules"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="65dp"
        app:layout_constraintTop_toBottomOf="@id/btnCreateDate"/>

</android.support.constraint.ConstraintLayout>
